<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/failedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp"
        android:contentDescription="@string/text_desc"
        android:src="@drawable/hacking_failed_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/failedMessage"
        android:layout_marginTop="20sp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/continueGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="340dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/key_button_background"
            android:contentDescription="@string/text_desc"
            android:src="@drawable/ic_play_arrow_black_24dp" />

        <ImageButton
            android:id="@+id/exitGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0sp"
            android:layout_marginEnd="340sp"
            android:background="@drawable/key_button_background"
            android:contentDescription="@string/text_desc"
            android:src="@drawable/ic_exit_to_app_black_24dp" />


    </RelativeLayout>

</RelativeLayout>